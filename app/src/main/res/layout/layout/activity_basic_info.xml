<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_ll_grey_h"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:showDividers="middle">

        <!--区域信息-->
        <include
            android:id="@+id/region"
            layout="@layout/row_list_accessible"/>

        <!--店铺信息-->
        <include
            android:id="@+id/shop"
            layout="@layout/row_list_accessible"/>

        <!--品牌车系-->
        <include
            android:id="@+id/choose_brand"
            layout="@layout/row_list_accessible"/>
        <!--宣传标题-->
        <include
            android:id="@+id/publicity_title"
            layout="@layout/row_list_edit"/>
        <!--车架号-->
        <include
            android:id="@+id/chassis_num"
            layout="@layout/row_list_edit"/>
        <!--行驶里程-->
        <include
            android:id="@+id/mileage"
            layout="@layout/row_list_edit"/>
        <!--是否已上牌-->
        <include
            android:id="@+id/license"
            layout="@layout/row_list_accessible"/>
        <!--首次上牌年月-->
        <include
            android:id="@+id/put_license_time"
            layout="@layout/row_list_subtext"/>
        <!--出厂年月-->
        <include
            android:id="@+id/out_factory_time"
            layout="@layout/row_list_subtext"/>
        <!--年审日期-->
        <include
            android:id="@+id/validate_time"
            layout="@layout/row_list_subtext"/>
        <!--商业险日期-->
        <include
            android:id="@+id/businessInsurance_time"
            layout="@layout/row_list_subtext"/>
        <!--交强险日期-->
        <include
            android:id="@+id/forceInsurance_time"
            layout="@layout/row_list_subtext"/>
        <!--钥匙数量-->
        <include
            android:id="@+id/key_num"
            layout="@layout/row_list_accessible"/>
        <!--外观颜色-->
        <include
            android:id="@+id/appearance_color"
            layout="@layout/row_list_accessible"/>
        <!--内饰颜色-->
        <include
            android:id="@+id/interior_color"
            layout="@layout/row_list_accessible"/>
        <!--车身类型-->
        <include
            android:id="@+id/body_type"
            layout="@layout/row_list_accessible"/>
        <!--车门数-->
        <include
            android:id="@+id/door_num"
            layout="@layout/row_list_edit"/>

        <!--排量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="@dimen/row_min_width"
                android:text="排量"
                android:textColor="@color/text_black"
                android:textSize="13sp"
                />

            <EditText
                android:id="@+id/displacement_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_weight="1"
                android:background="@color/transparent"
                android:gravity="left"
                android:hint="请填写排量"
                android:inputType="number"
                android:textColor="@color/text_black"
                android:textSize="13sp"/>

            <TextView
                android:id="@+id/displacement_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_soild_triangle"
                android:paddingLeft="10dp"
                android:text="L"
                android:textColor="@color/text_black"
                android:textSize="15sp"/>
        </LinearLayout>
        <!--新手指导价-->
        <include
            android:id="@+id/novice_guide_price"
            layout="@layout/row_list_edit"/>
        <!--零售价-->
        <include
            android:id="@+id/retail_Price"
            layout="@layout/row_list_edit"/>
        <!--展厅价-->
        <include
            android:id="@+id/show_Price"
            layout="@layout/row_list_edit"/>
        <!--网络价-->
        <include
            android:id="@+id/network_Price"
            layout="@layout/row_list_edit"/>
        <!--黄色预警库龄-->
        <include
            android:id="@+id/yellow_warn"
            layout="@layout/row_list_edit"/>
        <!--红色预警库龄-->
        <include
            android:id="@+id/red_warn"
            layout="@layout/row_list_edit"/>
        <!--补充说明-->
        <include
            android:id="@+id/explanation"
            layout="@layout/row_list_edit"/>
    </LinearLayout>
</ScrollView>