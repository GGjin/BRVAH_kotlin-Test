<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <ImageView
        android:id="@+id/car_photo"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="10dp"
        android:background="@color/red"/>

    <ImageView
        android:id="@+id/authentication"
        android:layout_width="60dp"
        android:layout_height="16dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        tools:src="@drawable/ic_authentication"/>

    <ImageView
        android:id="@+id/car_photo_right"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginLeft="-37dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/car_photo"
        tools:src="@drawable/ic_predetermine"/>

    <TextView
        android:id="@+id/car_title"
        style="@style/item_text_style"
        android:layout_width="match_parent"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_black"
        android:textSize="13sp"
        tools:text="路虎·揽胜 2017新款 6.0L 百年纪念款路虎·揽胜 2017新款 6.0L 百年纪念款"/>


    <TextView
        android:id="@+id/car_info"
        style="@style/item_text_style"
        android:layout_below="@+id/car_title"
        android:textColor="@color/text_grey"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        tools:text="10万公里/2017年/车商"/>

    <TextView
        android:id="@+id/car_state"
        style="@style/item_text_style"
        android:layout_below="@+id/car_info"
        android:textColor="@color/text_orange"
        android:textSize="11sp"
        tools:ignore="SmallSp"
        tools:text="已上架/已认证"/>

    <LinearLayout
        android:id="@+id/car_price_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/car_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:textSize="22sp"
            tools:text="60.8"/>

        <TextView
            android:id="@+id/car_price_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_orange"
            android:textSize="13sp"
            tools:text="万"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/car_sale_state"
        tools:src="@drawable/ic_car_wholesale"
        android:layout_above="@+id/car_price_ll"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>