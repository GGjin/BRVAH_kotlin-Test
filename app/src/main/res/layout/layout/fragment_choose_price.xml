<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textColor="@color/text_black"
            android:textSize="13sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/price_unit"
            android:textColor="@color/text_grey"
            android:textSize="10sp"
            tools:ignore="SmallSp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="@string/unlimit"
            android:textColor="@color/text_black"
            android:textSize="12sp"
            />
    </LinearLayout>

    <com.anpxd.ewalker.view.RangeBar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="34dp"
        android:padding="10dp"
        app:rangeColor="@color/main_orange"
        app:rangeHeight="5dp"
        app:sliderDrawable="@drawable/ic_hollow_circle"
        app:solidBackgroundColor="@color/main_orange"
        app:textArray="@array/range_array"/>

</LinearLayout>