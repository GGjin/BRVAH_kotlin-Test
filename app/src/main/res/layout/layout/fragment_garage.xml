<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_orange"
        android:gravity="center"
        android:text="@string/car_storage"
        android:textColor="@color/white"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="14dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_car_control"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="@string/car_control"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="92dp"
            android:layout_height="2dp"
            android:background="@color/main_orange1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_grey"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/put_storage"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_put_storage"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_put_storage"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/in_storage"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_in_storage"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_in_storage"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/out_storage"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_out_storage"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_out_storage"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/in_storage_undone"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_in_storage_undone"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_in_storage_undone"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/already"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_already"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_already"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/weixin_shop"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_weixin_shop"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/weixin_shop"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="36dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_car_tool"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:text="@string/utility_tool"
            android:textColor="@color/text_black"
            android:textSize="16sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <View
            android:layout_width="92dp"
            android:layout_height="2dp"
            android:background="@color/main_orange1"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_grey"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:orientation="horizontal"
        android:weightSum="3">


        <LinearLayout
            android:id="@+id/appraisement"
            style="@style/garage_item_ll">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_car_appraisement"/>

            <TextView
                style="@style/garage_item_text"
                android:text="@string/car_appraisement"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>